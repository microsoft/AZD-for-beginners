// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "AZD for Beginners",
	// Python 3.12 with Debian Bookworm (latest stable)
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bookworm",
	
	// Dev container features - tools installed in the container
	"features": {
		// Azure Developer CLI - the main tool for this course
		"ghcr.io/azure/azure-dev/azd:latest": {},
		// Azure CLI - used alongside AZD for resource management
		"ghcr.io/devcontainers/features/azure-cli:1": {
			"installBicep": true
		},
		// Node.js - required for many AZD templates
		"ghcr.io/devcontainers/features/node:1": {
			"version": "20"
		},
		// GitHub CLI - useful for template management
		"ghcr.io/devcontainers/features/github-cli:1": {},
		// Docker-in-Docker - for container app deployments
		"ghcr.io/devcontainers/features/docker-in-docker:2": {}
	},

	// Forward ports for local development
	"forwardPorts": [
		8000,  // MkDocs preview server
		3000,  // Common web app port
		5000,  // Python Flask default
		8080   // Common API port
	],

	// Commands to run after container creation
	"postCreateCommand": "pip3 install --user -r requirements-dev.txt && azd version && az --version",

	// VS Code specific customizations
	"customizations": {
		"vscode": {
			"settings": {
				"python.defaultInterpreterPath": "/usr/local/bin/python",
				"editor.formatOnSave": true,
				"files.trimTrailingWhitespace": true
			},
			"extensions": [
				// Python development
				"ms-python.python",
				"ms-python.vscode-pylance",
				
				// Jupyter notebook support
				"ms-toolsai.jupyter",
				"ms-toolsai.vscode-jupyter-cell-tags",
				"ms-toolsai.vscode-jupyter-slideshow",
				
				// AI-powered coding assistance
				"GitHub.copilot",
				"GitHub.copilot-chat",
				
				// Azure development tools
				"ms-azuretools.vscode-azurefunctions",
				"ms-azuretools.vscode-docker",
				"ms-azuretools.vscode-bicep",
				"ms-vscode.azure-repos",
				"ms-azure-devtools.azure-resource-groups",
				
				// Markdown and documentation
				"yzhang.markdown-all-in-one",
				"DavidAnson.vscode-markdownlint",
				"bierner.markdown-mermaid",
				
				// YAML and JSON support (for azure.yaml, bicep params)
				"redhat.vscode-yaml",
				
				// Git tools
				"eamodio.gitlens",
				"mhutchie.git-graph"
			]
		}
	}

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
